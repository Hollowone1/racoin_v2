{
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.0",
        "twig/twig": "3.*",
        "illuminate/database": "11.*",
        "ext-mysqli": "*",
        "ext-pdo": "*"
    },
    "autoload":{
        "psr-7":{
            "controller":"./app/controllers",
            "model":"./app/models",
            "db":"./app/db"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "require-dev": {
        "rector/rector": "*"
    }
}
